    <servlet>
        <servlet-name>Add new book</servlet-name>
        <servlet-class>servlet.adminActionServlet.AddBookServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add new book</servlet-name>
        <url-pattern>/addNewBook</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Add new article</servlet-name>
        <servlet-class>servlet.adminActionServlet.AddArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Add new article</servlet-name>
        <url-pattern>/addNewArticle</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Search deletable user</servlet-name>
        <servlet-class>servlet.adminActionServlet.SearchDeletableUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Search deletable user</servlet-name>
        <url-pattern>/searchDeletableUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Delete user</servlet-name>
        <servlet-class>servlet.adminActionServlet.DeleteUserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Delete user</servlet-name>
        <url-pattern>/deleteUser</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Book section</servlet-name>
        <servlet-class>servlet.BookSectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Book section</servlet-name>
        <url-pattern>/books</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Article section</servlet-name>
        <servlet-class>servlet.ArticleSectionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Article section</servlet-name>
        <url-pattern>/articles</url-pattern>
    </servlet-mapping>

    <error-page>
        <error-code>404</error-code>
        <location>/404Error.jsp</location>
    </error-page>

</web-app>